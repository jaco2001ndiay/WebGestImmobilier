@model WebGestImmobilier.Models.Utilisateurs

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .details-container {
        margin-top: 20px;
    }

    .details-container dl dt {
        font-weight: bold;
    }

    .details-container dl dd {
        margin-left: 0;
    }

    .action-buttons {
        margin-top: 20px;
    }

   
</style>

<h2>Details Utilisateur</h2>

<div class="row details-container">
    <div class="col-md-6">
        <h4>Informations Utilisateur</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.nomUsers)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nomUsers)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.prenom)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.prenom)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.login)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.login)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.addPhoneNumber2)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.addPhoneNumber2)
            </dd>
        </dl>
    </div>
</div>

<div class="row action-buttons">
    <div class="col-md-6">
        <p>
            @Html.ActionLink("Modifier", "Edit", new { id = Model.IdUsers }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Retour à la liste", "Index", null, new { @class = "btn btn-default" })
        </p>
    </div>
</div>
